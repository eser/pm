@{
use Scabbia\Extensions\Http\Http;
use Scabbia\Extensions\Helpers\Html;
use Scabbia\Extensions\Helpers\String;
use Scabbia\Extensions\Session\Session;
use Scabbia\Extensions\Views\Views;
use Scabbia\Extensions\I18n\I18n;
use Scabbia\Config;
use App\Includes\ViewHelpers;
}
@Views::viewFile('{app}views/shared/header.cshtml')
@Views::viewFile('{app}views/shared/nav/home.cshtml', $model)

<section id="main">
@Views::viewFile('{app}views/shared/top_navigation.cshtml', $model)

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span6">
                @if (!is_null($alert = Session::getFlash('alert'))) {
                <div class="alert alert-@$alert[0]">
                    @$alert[1]
                </div>
                }

                <div class="box">
                    <div class="tab-header"> Settings </div>
                    <form class="fill-up" method="post" action="@Http::url('home/settings')">
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="padded">

                                    <div class="input">
                                        <label for="Username" class="caption">@I18n::_('Username')</label>
                                        <input type="text" id="Username" placeholder="@I18n::_('Username')" name="username" value="@String::htmlEscape($data['username'])" disabled="disabled" />
                                    </div>

                                    <div class="input">
                                        <label for="Password" class="caption">@I18n::_('Password')</label>
                                        <input type="password" id="Password" placeholder="@I18n::_('Password')" name="password" value="@String::htmlEscape($data['password'])" />
                                    </div>

                                    <div class="input">
                                        <label for="Password2" class="caption">@I18n::_('Password Again')</label>
                                        <input type="password" id="Password2" placeholder="@I18n::_('Password Again')" name="password2" value="@String::htmlEscape($data['password2'])" />
                                    </div>

                                    <hr />

                                    <div class="input">
                                        <label for="Name" class="caption">@I18n::_('Name')</label>
                                        <input type="text" id="Name" placeholder="@I18n::_('Name')" name="name" value="@String::htmlEscape($data['name'])" />
                                    </div>

                                    <div class="input">
                                        <label for="Email" class="caption">@I18n::_('E-Mail')</label>
                                        <input type="text" id="Email" placeholder="@I18n::_('E-Mail')" name="email" value="@String::htmlEscape($data['email'])" />
                                    </div>

                                    <div class="input">
                                        <label for="Phone" class="caption">@I18n::_('Phone')</label>
                                        <input type="text" id="Phone" placeholder="@I18n::_('Phone')" name="phone" value="@String::htmlEscape($data['phone'])" />
                                    </div>

                                    <div class="input">
                                        <label for="Page" class="caption">@I18n::_('Page')</label>
                                        <input type="text" id="Page" placeholder="@I18n::_('Page')" name="page" value="@String::htmlEscape($data['page'])" />
                                    </div>

                                    <div class="input">
                                        <label for="Scmid" class="caption">@I18n::_('SCM ID')</label>
                                        <input type="text" id="Scmid" placeholder="@I18n::_('SCM ID')" name="scmid" value="@String::htmlEscape($data['scmid'])" />
                                    </div>

                                    <div class="input">
                                        <label for="Bio" class="caption">@I18n::_('Bio')</label>
                                        <textarea id="Bio" placeholder="@I18n::_('Bio')" name="bio">@String::htmlEscape($data['bio'])</textarea>
                                    </div>

                                    <div class="input">
                                        <label for="Language" class="caption">@I18n::_('Language')</label>
                                        <select name="language" id="Language" placeholder="@I18n::_('Language')" class="fill-up chzn-select">
                                        @Html::selectOptions(I18n::$languages, $data['language'], 'name')
                                        </select>
                                    </div>

                                    <div class="input">
                                        <label for="Properties" class="caption">@I18n::_('Settings')</label>

                                        <input type="checkbox" class="normal-check" id="SendMails" name="sendmails" value="1" @{ if ($data['sendmails'] === '1') { echo 'checked="checked" '; } }/>
                                        <label for="SendMails" class="span4">@I18n::_('Send Mails')</label>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="pull-right">
                                <button type="submit" name="asNew" value="0" class="button blue">@I18n::_('Update')</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row-fluid">
@Views::viewFile('{app}views/shared/copyright.cshtml')
        </div>
    </div>
</section>

@Views::viewFile('{app}views/shared/footer.cshtml')