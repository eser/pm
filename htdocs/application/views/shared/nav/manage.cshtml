@{
use Scabbia\Extensions\Http\Http;
use Scabbia\Extensions\I18n\I18n;
use App\Includes\ViewHelpers;
}
<nav id="secondary" class="main-nav">

    <div class="profile-menu">

        <div class="pull-left">
            <div class="avatar">
                <img src="@ViewHelpers::get_gravatar($controller->userBindings->user['email'], 48)" />
            </div>
        </div>

        <div class="pull-left">
            <div class="title">
                @$controller->userBindings->user['name']
            </div>
        </div>

        <div class="pull-right profile-menu-nav-collapse">
            <button class="button black"><i class="icon-reorder"></i></button>
        </div>

    </div>
    <ul class="secondary-nav-menu">
        <li@{ if ($controller->route['action'] == 'users') { echo ' class="active"'; } }><a href="@Http::url('manage/users')"><i class="icon-user"></i> @I18n::_('Users')</a></li>
        <li@{ if ($controller->route['action'] == 'groups') { echo ' class="active"'; } }><a href="@Http::url('manage/groups')"><i class="icon-group"></i> @I18n::_('Groups')</a></li>
        <li@{ if ($controller->route['action'] == 'roles') { echo ' class="active"'; } }><a href="@Http::url('manage/roles')"><i class="icon-check"></i> @I18n::_('Roles')</a></li>
        <li@{ if ($controller->route['action'] == 'constants') { echo ' class="active"'; } }><a href="@Http::url('manage/constants')"><i class="icon-list"></i> @I18n::_('Constants')</a></li>
        <li@{ if ($controller->route['action'] == 'pages') { echo ' class="active"'; } }><a href="@Http::url('manage/pages')"><i class="icon-list"></i> @I18n::_('Pages')</a></li>
    </ul>
</nav>
